<Window x:Class="TelegramBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="350" Width="525">

    <StackPanel>
        <Button Name="RunButton" Content="Run" Click="RunButton_OnClick" Width="50" Background="WhiteSmoke" BorderBrush="Black" BorderThickness="1" FontFamily="Segoe UI" FontSize="18" FontStyle="Normal" Margin="5"></Button>
        <Button Name="StopButton" Content="Stop" Click="StopButton_OnClick" Width="50" Background="WhiteSmoke" BorderBrush="Black" BorderThickness="1" FontFamily="Segoe UI" FontSize="18" FontStyle="Normal" Margin="5"></Button>
        <Label Name="StateLabel" HorizontalContentAlignment="Center" Width="100" Background="WhiteSmoke" BorderBrush="Black" BorderThickness="1" FontFamily="Segoe UI" FontSize="18" FontStyle="Normal" Margin="5"></Label>
    </StackPanel>
</Window>