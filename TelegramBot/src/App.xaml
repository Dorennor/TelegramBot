<Application x:Class="DesktopApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:DesktopApp.View"
             xmlns:viewModel="clr-namespace:DesktopApp.ViewModel"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/MenuButtonTheme.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/Styles/TextBoxTheme.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/Styles/ComboBoxTheme.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Resources/Styles/ButtonTheme.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
                <view:HomeView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:StatisticsViewModel}">
                <view:StatisticsView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
